<div class="row">
  <div class="col-md-6">

    <h4>Bills coming up in the next week: {{model.length}}</h4>


    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>
            Bill ID
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        {{#each bill in model}}
        <tr>
          <td>
            {{#link-to 'bill-details' bill.bill_id}}{{bill.bill_id}}{{/link-to}}
          </td>
          <td>
            {{bill.description}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>


  </div>
  <div class="col-md-6">
    {{outlet}}
  </div>
</div>
